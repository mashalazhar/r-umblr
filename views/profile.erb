<div class="container">
<h1><%= @user.first_name %>'s Posts</h1>
<p>
  <p><%= @user.first_name %> <%= @user.last_name %> | Birthday: <%= @user.birthday %> | Email: <%= @user.email %></p>
<hr>

<h3>Post Title: </h3>
<p>(caption goes here) </p>
<p>(City, Country)</p>

<% if @posts %>
<% @posts.each do |x| %>
  <div class="blog-post">
    <h2 class="blog-post-title"><%= x.post_title %></h2>
<% end %>
<% end %>

<hr>

<div class="footer">
<p><a href="/"><button type="button" class="btn btn-default btn-sm">
<span class="glyphicon glyphicon-log-out"></span> Log Out</button></a>

<a href="/edit"><button type="button" class="btn btn-default btn-sm">
<span class="glyphicon glyphicon-edit"></span> Edit</button></a>

<a href="/allposts"><button type="button" class="btn btn-default btn-sm">
<span class="glyphicon glyphicon-log-out"></span> All Posts</button></a>

</p>
</div>

<div class="post-container">
<form action="/profile" method="POST">
<label for="exampleFormControlTextarea1">Create a New Post</label>
  <div class="form-group">
    <input name="post_title" type="@newuser.post_title" class="form-control" id="text" placeholder="Post Title">
  </div>

  <div class="form-group">
    <input name="city" type="text" class="form-control" id="text" placeholder="City">
  </div>

  <div class="form-group">
    <input name="country" type="text" class="form-control" id="text" placeholder="Country">
  </div>

  <div class="form-group">
    <textarea name="post_caption" class="form-control" id="text" rows="3" placeholder="This is your caption."></textarea>
  </div>

  <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span> Submit New Post</button>
</form>
</div>

<div class="footer">
  <p><a href="/"><button type="button" class="btn btn-default btn-sm">
  <span class="glyphicon glyphicon-log-out"></span> Log Out</button></a>
  
  <a href="/edit"><button type="button" class="btn btn-default btn-sm">
  <span class="glyphicon glyphicon-edit"></span> Edit</button></a>

  <a href="/allposts"><button type="button" class="btn btn-default btn-sm">
  <span class="glyphicon glyphicon-log-out"></span> All Posts</button></a>
  </p>
</div>