<div class="container">
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">NEW USERS</h5>
                <form action="/user/welcome" method="POST">
                    <div class="form-group">
                        <input name="firstname" type="text" class="form-control" id="text" placeholder="First Name">
                    </div>
                    <div class="form-group">
                        <input name="lastname" type="text" class="form-control" id="text" placeholder="Last Name">
                    </div>
                    <div class="form-group">
                        <input name="birthday" type="integer" class="form-control" id="integer" placeholder="Birthday">
                    </div>
                    <div class="form-group">
                        <input name="email" type="email" class="form-control" id="email" placeholder="E-mail Address">
                    </div>
                    <div class="form-group">
                        <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary"><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">CURRENT USERS</h5>
                <form action="/user/profile" method="POST">
                    <div class="form-group">
                        <input name="email" type="email" class="form-control" id="email" placeholder="E-mail Address">
                    </div>
                    <div class="form-group">
                        <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

